{
  "family": "th-insights-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::940053359004:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::940053359004:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "940053359004.dkr.ecr.us-west-2.amazonaws.com/th-insights-backend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "DATABASE_HOST",
          "value": "th-db-insights.cx4mmeokynqf.us-west-2.rds.amazonaws.com"
        },
        {
          "name": "DATABASE_PORT",
          "value": "5432"
        },
        {
          "name": "DATABASE_NAME",
          "value": "th-db-insights"
        },
        {
          "name": "DATABASE_USER",
          "value": "thadmin"
        },
        {
          "name": "DATABASE_PASSWORD",
          "value": "DJJAiKQVI0RTVHK"
        },
        {
          "name": "JWT_SECRET",
          "value": "zm+KbE2/v1hqWD40Na5VBtnIyrDIWqwYK07PYrIGcV8="
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/th-insights-backend",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true,
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
